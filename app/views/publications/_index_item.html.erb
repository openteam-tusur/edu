<div class='publication'>
  <%= link_to image_tag("icon_pdf_#{item.access}.png"),
                publication_path(item),
                :title => item.human_access, :rel => "tipsy" %>
  <%= link_to publication_path(item) do %>
    <span class="title"><%= "#{item.title}: " %></span>
    <span><%= "#{item.human_kind} /" %></span>
    <span class="authors">
      <%= item.authors.any? ? raw("#{item.authors.map(&:abbreviated_name).join(', ')} &ndash;")  : "" %>
    </span>
    <span class="year"><%= "#{item.year}. " %> &ndash;</span>
    <span class="volume"><%= "#{item.volume} Ñ." %></span>
  <% end %>
</div>


<%= semantic_form_for resource.human, :url => manage_human_path(resource.human) do |form| %>
  <%= form.inputs :surname, :name, :patronymic %>
  <% form.inputs :for => "#{resource.class.to_s.underscore.gsub('roles/', '').pluralize}" do |role| %>
    <%= render :partial => "#{resource.class.to_s.underscore.gsub('roles/', '')}_fields", :locals => { :role => role } %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button %>
  <% end %>
<% end %>


<% title @work_programm.title %>

<div class="work_programm">
  <ul class="resource_action">
    <li><%= link_to t(:edit), edit_resource_path(resource), :class => "button" %></li>
    <%= render :partial => "manage/common/resource_state", :locals => { :resource => resource } %>
  </ul>

  <%= @work_programm.authors_list %>

  <%= render :partial => "manage/common/resource", :locals => { :resource => resource } %>

  <div class='authors'>
    <div>
      <h2>Автор(ы)</h2>
      <%= link_to t("author.add"), new_manage_chair_work_programm_author_path(@chair, @work_programm), :class => 'add' %>
    </div>
    <% unless @work_programm.authors.empty? %>
      <ul>
        <% @work_programm.authors.each do |author| %>
          <li>
            <span><%= author.human.full_name %></span>
            <%= link_to t(:edit), edit_manage_chair_work_programm_author_path(@chair, @work_programm, author), :class => 'edit' %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class='disciplines'>
    <div>
      <h2>Дисциплины</h2>
      <%= link_to t("resource_education.add"), new_manage_chair_work_programm_resource_discipline_path(@chair, @work_programm), :class => 'add' %>
    </div>
    <% unless @work_programm.resource_disciplines.empty? %>
      <ul>
        <% @work_programm.resource_disciplines.each do |resource_discipline| %>
          <li>
            <%= resource_discipline.discipline.speciality.slug %>
            <%= resource_discipline.discipline.title %>
            <%= link_to t(:edit), edit_manage_chair_work_programm_resource_discipline_path(@chair, @work_programm, resource_discipline) %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>


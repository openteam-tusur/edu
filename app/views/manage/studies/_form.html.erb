<fieldset class="inputs">
  <ol class="study_common_info">
    <%= form.input :discipline_name, :input_html => { :value => resource.discipline ? resource.discipline.name : resource.discipline_name, :class => "focus_first" } %>
    <%= form.input :chair, :group_by => :faculty %>
    <%= form.enum_input :cycle %>
    <%= link_to_add_association 'Добавить семестр', form, :educations %>
    <%= form.semantic_fields_for :educations do |education| %>
      <%= render :partial => "education_fields", :locals => { :f => education } %>
    <% end %>
  </ol>
  <ol class="education_list">
  </ol>
</fieldset>


<%= semantic_form_for :publications, :html => { :method => :get } do | form | %>
  <%= form.inputs do %>
    <%= form.input :query, :required => false, :label => false, :input_html => { :name => 'query', :value => params[:query] } %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button 'Найти' %>
  <% end %>
<% end %>

<% if collection.any? %>
  <div class="results">
    <% @publications.each do |obj| %>
      <%= render :partial => "index_item", :locals => { :item => obj } %>
    <% end %>
  </div>

<% end %>

<div class="facets">
  <% @facets.each do | facet | %>
    <%= link_to collection_path(:query => params[:query], :kind => facet.value) do %>
      <%= Publication.human_attribute_name "kind_enum.#{facet.value}" %> <span><%= facet.count %></span>
    <% end %>
  <% end %>
</div>

<%= will_paginate @publications %>

<div><%= link_to t("new"), new_resource_path, :class => 'button' %></div>


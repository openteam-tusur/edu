<%= form.inputs do %>
  <%= form.enum_input :study %>
  <%= form.input :semesters_count if resource.new_record? %>

  <% resource.build_attachment unless resource.attachment %>
  <%= form.inputs resource.attachment.class.model_name.human,
                  :for => :attachment do |attachment_form| %>
    <%= attachment_form.input :data, :as => :file %>
  <% end %>
  <%= form.input :access, :as => :enum %>
<% end %>

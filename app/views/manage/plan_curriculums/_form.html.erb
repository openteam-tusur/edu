<%= form.inputs do %>
  <%= form.enum_input :study %>
  <%= form.input :semesters_count if @plan_curriculum.new_record? %>
  
  <% @plan_curriculum.build_resource unless @plan_curriculum.resource %>
  <%= form.inputs @plan_curriculum.resource.class.model_name.human,
                  :for => :resource do |resource_form| %>
    <%= resource_form.inputs :name, :year %>
  <% end %>
  
  <% @plan_curriculum.build_attachment unless @plan_curriculum.attachment %>
  <%= form.inputs @plan_curriculum.attachment.class.model_name.human,
                  :for => :attachment do |attachment_form| %>
    <%= attachment_form.input :data, :as => :file %>
  <% end %>
<% end %>

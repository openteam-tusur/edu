<%= show_for @speciality do |speciality| %>
  <%= speciality.association :chair %>
  <%= speciality.attributes :name, :qualification, :degree %>
<% end %>

<%= link_to t(:back), manage_chair_specialities_path(@chair) %> |
<%= link_to t(:edit), edit_manage_chair_speciality_path(@chair, @speciality) %> |
<%= link_to t(:destroy), [:manage, @chair, @speciality], :confirm => 'are you sure?', :method => :delete %>


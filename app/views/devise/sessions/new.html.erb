<%= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name) do |form| %>
  <%= form.inputs do %>
    <%= form.input :email, :as => :string, :input_html => { :class => "focus_first" } %>
    <%= form.input :password %>
    <% if devise_mapping.rememberable? %>
      <%= form.input :remember_me, :as => :boolean %>
    <% end %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :label => "Войти", :button_html => { :class => "button" } %>
  <% end %>
<% end %>

<%= render :partial => "shared/links" %>


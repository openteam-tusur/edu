<h2>Изменение пароля</h2>

<%= semantic_form_for resource, :url => password_path(resource), :html => { :method => :put }  do |form| %>
  <%= devise_error_messages! %>
  <%= form.hidden_field :reset_password_token %>
  <%= form.inputs :password, :password_confirmation %>
  <%= form.buttons do %>
    <%= form.commit_button 'Изменить', :button_html => { :class => :button } %>
  <% end %>
<% end %>

<%= render :partial => "shared/links" %>


<% if controller_name != 'sessions' %>
  <%= link_to "Вход", new_session_path(resource_name) %>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Регистрация", new_registration_path(resource_name) %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Забыли Ваш пароль?", new_password_path(resource_name) %>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Не получили инструкции для подтверждения регистрации?", new_confirmation_path(resource_name) %>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Не получили инструкции для разблокирования учетной записи?", new_unlock_path(resource_name) %>
<% end %>


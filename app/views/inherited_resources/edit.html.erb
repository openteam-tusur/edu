<%= semantic_form_for resource, :url => resource_path, :html => { :multipart => true } do |form| %>
  <%= form.error_messages %>
  <%= render :partial => "form", :object => form %>
  <%= form.buttons do %>
    <%= form.commit_button :button_html => { :class => "button" } %>
    <%= render "cancel" %>
  <% end %>
<% end %>


<li>
  <%= "#{student.title} гр.#{student.group} &ndash; ".html_safe + I18n.t("role.#{student.state}") %>
  <% if current_user.roles.include?(:admin) %>
    <%= link_to t(:edit), edit_manage_role_path(student), :class => :button if can? :manage, student %>

    <% unless student.aasm_events_for_current_state.empty? %>

        <% student.aasm_events_for_current_state.each do |event| %>

            <%= link_to(t("role.#{event}"), transit_manage_role_path(student,
                                                    :event => event),
                                                    :class => "event button light",
                                                    :method => :put) %>

        <% end %>

    <% end %>

  <% else %>
    <%= link_to t(:edit), edit_human_roles_student_path(student) %>
  <% end %>
</li>


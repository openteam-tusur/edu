<% title @human.full_name %>

<%= content_for :garavatar do %>
  <%= image_tag @human.user ? @human.user.gravatar_url : 'human_icon.png' %>
<% end %>

<hr />

<div class="human_profile">
  <ul class="cool_list">
    <% unless @human.roles_with_type(:admin).empty? %>
      <li>
        <h5 class="admin_icon">Администратор</h5>
        <ul>
          <% @human.roles_with_type(:admin).each do |role| %>
            <li><%= role %></li>
          <% end %>
        </ul>
      </li>
    <% end %>
    <% unless @human.roles_with_type(:student, :accepted).empty? %>
      <li>
        <h5 class="student_icon">Студент</h5>
        <ul>
          <% @human.roles_with_type(:student, :accepted).each do |role| %>
            <li><%= role %></li>
          <% end %>
        </ul>
      </li>
    <% end %>
    <% unless @human.roles_with_type(:graduate, :accepted).empty? %>
      <li>
        <h5 class="graduate_icon">Магистрант</h5>
          <ul>
            <% @human.roles_with_type(:graduate, :accepted).each do |role| %>
              <li><%= role %></li>
            <% end %>
          </ul>
      </li>
    <% end %>
    <% unless @human.roles_with_type(:employee, :accepted).empty? %>
      <li>
        <h5 class="employee_icon">Сотрудник</h5>
          <ul>
            <% @human.roles_with_type(:employee, :accepted).each do |role| %>
              <li><%= role %></li>
            <% end %>
          </ul>
      </li>
    <% end %>
  </ul>

  <% unless @human.publications.empty? %>
    <div class="human_publications">
      <ul class="tabs cool_list">
        <% Publication.human_enum[:kind].each do |kind| %>
          <li id="<%= kind[0] %>">
            <a href="#"><%= kind[1] %></a>
          </li>
        <% end %>
      </ul>
      <% first_key=@human.publications_grouped_by_kind.keys[0] %>
      <% @human.publications_grouped_by_kind.each do |kind, publications| %>
        <ul class="cool_list <%= kind %><%= ' first' if kind==first_key %>">
          <% publications.each do |publication| %>
            <li><%= render :partial => "common/resource_link", :locals => {:resource => publication, :full_text => true} %></li>
          <% end %>
        </ul>
      <% end %>

    </div>
  <% end %>

</div>


<%= show_for resource do |human| %>
  <%= human.attributes :surname, :name, :patronymic %>
<% end %>

<%= link_to t(:edit), edit_human_path, :class => :button %>

<%= link_to 'Я являюсь студентом', new_human_roles_student_path, :class => :button %>
<%= link_to 'Я являюсь преподавателем', new_human_roles_teacher_path, :class => :button %>


<% unless resource.roles.empty? %>
  <ul>
    <%= render resource.roles %>
  </ul>
<% end %>


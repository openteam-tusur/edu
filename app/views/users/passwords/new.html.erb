<h2>Забыли Ваш пароль?</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.inputs :email %>
  <%= f.buttons do %>
    <%= f.commit_button "Отправить инструкции на почту", :button_html => { :class => :button } %>
  <% end %>
<% end %>

<%= render :partial => "users/shared/links" %>


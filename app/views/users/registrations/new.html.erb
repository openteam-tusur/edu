<%= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |form| %>
  <%= devise_error_messages! %>

  <%= form.inputs do %>
    <%= form.input :email %>
    <%= form.input :password %>
    <%= form.input :password_confirmation %>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button "Зарегистрироваться", :button_html => { :class => "button" } %>
  <% end %>
<% end %>

<%= render :partial => "users/shared/links" %>


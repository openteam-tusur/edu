<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <% resource.build_human unless resource.human %>
  <%= f.fields_for :human do |human_form| %>
    <p><%= human_form.label :surname %><br />
    <%= human_form.text_field :surname %></p>

    <p><%= human_form.label :name %><br />
    <%= human_form.text_field :name %></p>

    <p><%= human_form.label :patronymic %><br />
    <%= human_form.text_field :patronymic %></p>
  <% end %>

  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Зарегистрироваться" %></p>
<% end %>

<%= render :partial => "users/shared/links" %>


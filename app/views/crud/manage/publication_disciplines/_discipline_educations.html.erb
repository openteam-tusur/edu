<% @grouped_educations.each do |curriculum, educations| %>
  <p>
    <%= "#{curriculum.profile}, " unless curriculum.profile.blank? %>
    <%= curriculum.human_study_form %>
  </p>
  <% unless educations.empty? %>
    <ul>
      <% educations.each do |education| %>
        <li>
        <%= check_box_tag "publication_discipline[education_ids][]",
                          education.id,
                          @publication_discipline.educations.include?(education),
                          :id => "publication_discipline_education_#{education.id}" %>
        <%= label_tag "publication_discipline_education_#{education.id}", education.semester.title %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<% title raw(@record.title) %>

<div class="abstract">
  <p><strong>Реферат:</strong> <%= raw(@record.summary) %></p>
  <p><strong>Тип:</strong> <%= raw(@record.tipe) %></p>
  <p><strong>Тематика:</strong> <%= raw(@record.human_subject) %></p>
  <p><strong>Выпуск ВИНИТИ:</strong> <%= raw(@record.fascicle) %></p>
  <p><strong>Ключевые слова:</strong> <%= raw(@record.keywords) %></p>
  <table>
    <% @record.fields.each do | field, value | %>
      <% unless Record.special_fields.include?(field) %>
        <tr>
          <td><%= Record.field_codes[field.to_i] %></td>
          <td><%= value %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>

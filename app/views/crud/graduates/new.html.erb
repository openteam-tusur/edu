<% content_for :get_started do %>
  <%= render :partial => 'shared/has_been_started' %>
<% end %>

<p>Для регистрации в качестве магистранта ТУСУРа укажите свою группу и дату рождения.</p>
<%= semantic_form_for resource, :url => human_graduates_path do |form| %>
  <%= form.error_messages %>
  <%= form.inputs do %>
    <%= form.input :group, :input_html => { :class => "focus_first" } %>
    <%= form.input :birthday %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :button_html => {:class => 'button'} %>
    <li><%= link_to t(:cancel), profile_path, :class => "button light" %></li>
  <% end %>
<% end %>

